<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.siva.virtual">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Virtual"
        tools:targetApi="31">
        <activity
            android:name="com.siva.virtual.PrivacyActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/camera_provider_paths" />
        </provider>

        <activity android:name="com.siva.virtual.ImageListActivity" />
        <activity
            android:name="com.siva.virtual.OpenFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.siva.virtual.UploadImage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="com.siva.virtual.AnswerSecurityQuestionActivity"/>
        <activity
            android:name="com.siva.virtual.PinSetUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.siva.virtual.IntroActivity"/>
        <activity
            android:name="com.siva.virtual.SecretQuestionsActivity"
            android:theme="@style/Theme.Virtual"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="com.siva.virtual.OpeningActivity"
            android:exported="true"
            android:theme="@style/Theme.Virtual">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.siva.virtual.LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Virtual"/>
        <activity
            android:name="com.siva.virtual.MainActivity"
            android:theme="@style/Theme.Virtual"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>